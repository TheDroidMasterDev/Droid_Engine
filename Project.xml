<?xml version="1.0" encoding="utf-8"?>
<project>
	<app title="Psych Engine Droid" file="PsychEngine" packageName="com.shadowmario.psychengine" package="com.shadowmario.psychengine" main="Main" version="0.2.8" company="ShadowMario" />

	<window width="1280" height="720" fps="" background="#000000" hardware="true" vsync="false" />
	<window if="mobile" orientation="landscape" fullscreen="true" width="1280" height="720" resizable="false"/>

	<classpath name="source" />
	
	<assets path="assets/preload" rename="assets" exclude="*.mp3" />
	<assets path="assets/midi2charts" rename="assets/midi2charts" />
	<assets path="assets/fonts" />

	<haxelib name="flixel" />
	<haxelib name="flixel-addons" />
	<haxelib name="flixel-ui" />
	<haxelib name="tjson" />
	<haxelib name="hscript" />
	<haxelib name="lime" />
	<haxelib name="openfl" />
	<haxelib name="extension-androidtools" if="android"/>

	<config:android permission="android.permission.READ_EXTERNAL_STORAGE" if="android"/>
	<config:android permission="android.permission.WRITE_EXTERNAL_STORAGE" if="android"/>
	<config:android permission="android.permission.MANAGE_EXTERNAL_STORAGE" if="android" />
	
	<config:android gradle-version="7.5.1" />
	<config:android gradle-plugin="7.3.1" />

	<icon path="art/iconOG.png" />
</project>
